<h1>Update Pet</h1>

<form class="" action="/pets/<%= @pet.id %>" method="POST">
  <label>Name: </label><br>
  <input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>">
  <br><br>

  <label>Choose an existing owner: </label><br>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %> ><%= owner.name %></input>
  <% end %>
  <br><br>

  <label>And/or create a new owner</label><br>
  <input id="owner_name" type="text" name="owner[name]">
  <br><br>

  <input type="submit" name="submit" value="Update Pet">
</form>
